<h1>Login</h1>
<p class="form-info">Don't have account?
    <a href="/auth/register">Register now</a> and fix that!
</p>
<form action="/auth/login" method="POST">
    {{#if error}}
        {{#if error}}<div class="error"> <span>{{error.message}}</span></div>{{/if}}
    {{/if}}
    <div>
        <input type="email" name="email" placeholder="Email...">
    </div>
    <div>
        <input type="password" name="password" placeholder="Password...">
    </div>
    <div>
        <p class="message"></p>
        <button>Login</button>
    </div>
</form>
